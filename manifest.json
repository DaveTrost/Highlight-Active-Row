{
  "name": "highlight-active-row",
  "version": "1.0.0",
  "description": "Make the currently selected table row more visible by setting a custom style.",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": ["rowHighlighter.js"],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/row_highlight_icon16.png",
      "32": "images/row_highlight_icon32.png",
      "48": "images/row_highlight_icon48.png",
      "128": "images/row_highlight_icon128.png"
    }
  },
  "icons": {
    "16": "images/row_highlight_icon16.png",
    "32": "images/row_highlight_icon32.png",
    "48": "images/row_highlight_icon48.png",
    "128": "images/row_highlight_icon128.png"
  },

  "manifest_version": 2
}
